# ============================================================================
# VARIABLES DE ENTORNO - SAD LAS
# ============================================================================

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================

# URL de tu proyecto Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url

# Clave anónima de Supabase (pública)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Clave de servicio de Supabase (privada - solo para server-side)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# NEXT.JS CONFIGURATION
# ============================================================================

# URL base de la aplicación
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Entorno de la aplicación
NODE_ENV=development

# ============================================================================
# AUTHENTICATION
# ============================================================================

# Secret para JWT (generar con: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-here

# URL de NextAuth
NEXTAUTH_URL=http://localhost:3000

# ============================================================================
# DATABASE
# ============================================================================

# URL de conexión a la base de datos (opcional)
DATABASE_URL=postgresql://postgres:[password]@[host]:[port]/[database]

# ============================================================================
# EMAIL (opcional)
# ============================================================================

# Configuración de email para notificaciones
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password

# ============================================================================
# ANALYTICS (opcional)
# ============================================================================

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Habilitar características experimentales
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# ============================================================================
# SECURITY
# ============================================================================

# Clave para encriptar datos sensibles
ENCRYPTION_KEY=your-encryption-key-here

# ============================================================================
# DEPLOYMENT
# ============================================================================

# URL de la API en producción
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Configuración de Vercel (si usas Vercel)
VERCEL_URL=https://your-app.vercel.app

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Habilitar logs detallados en desarrollo
DEBUG=sad-las:*

# Configuración de desarrollo
NEXT_PUBLIC_DEV_MODE=true

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
